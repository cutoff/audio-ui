{
    "tabWidth": 4,
    "proseWrap": "always",
    "useTabs": false,
    "printWidth": 120,
    "bracketSameLine": false,
    "bracketSpacing": true,
    "singleQuote": false,
    "jsxSingleQuote": false,
    "semi": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": ["*.tsx", "*.ts", "*.jsx", "*.js"],
            "options": {
                "bracketSameLine": false,
                "jsxSingleQuote": false,
                "bracketSpacing": true
            }
        },
        {
            "files": ["*.md", "*.mdx"],
            "options": {
                "tabWidth": 2,
                "proseWrap": "preserve"
            }
        }
    ]
}
