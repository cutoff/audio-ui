{
    "name": "@cutoff/audio-ui-react",
    "description": "AudioUI by Cutoff - React Components for Audio and MIDI apps! Dual-licensed: GPL-3.0 for open source, Commercial for proprietary use.",
    "version": "1.0.0-dp.1",
    "author": "Renaud Denis <mail@renauddenis.com> (https://renauddenis.com)",
    "license": "GPL-3.0-only",
    "homepage": "https://cutoff.dev",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cutoff/audio-ui.git",
        "directory": "packages/react"
    },
    "bugs": {
        "url": "https://github.com/cutoff/audio-ui/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "sideEffects": [
        "**/*.css"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./style.css": "./dist/style.css"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rm -rf node_modules dist .turbo",
        "build": "pnpm exec vite build",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint \"src/**/*.{ts,tsx}\"",
        "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix || true",
        "lint:css": "stylelint \"src/**/*.css\"",
        "analyze": "pnpm build"
    },
    "keywords": [
        "react",
        "audio",
        "midi",
        "components"
    ],
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "dependencies": {
        "@cutoff/audio-ui-core": "workspace:*",
        "classnames": "^2.5.1",
        "fast-deep-equal": "^3.1.3"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.4.1",
        "@testing-library/react": "^16.3.0",
        "@types/react": "^18.3.27",
        "@types/react-dom": "^18.3.7",
        "@vitejs/plugin-react-swc": "^3.11.0",
        "@vitest/coverage-v8": "^1.6.1",
        "jsdom": "^24.1.3",
        "stylelint": "^16.26.1",
        "typescript": "^5.9.3",
        "vite": "^5.4.21",
        "rollup-plugin-visualizer": "^5.12.0",
        "vite-plugin-dts": "^3.9.1",
        "vitest": "^1.6.1"
    }
}
