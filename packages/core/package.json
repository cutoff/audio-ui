{
    "name": "@cutoff/audio-ui-core",
    "version": "1.0.0-dp.1",
    "description": "Core logic and models for AudioUI",
    "author": "Renaud Denis <mail@renauddenis.com> (https://renauddenis.com)",
    "license": "GPL-3.0-only",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "sideEffects": [
        "**/*.css"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./styles.css": "./src/styles/styles.css",
        "./themes.css": "./src/styles/themes.css"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "typecheck": "tsc --noEmit",
        "test": "vitest run",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "eslint \"src/**/*.ts\" --fix || true",
        "clean": "rm -rf node_modules dist"
    },
    "dependencies": {
        "fast-deep-equal": "^3.1.3"
    },
    "devDependencies": {
        "jsdom": "^24.1.3",
        "typescript": "^5.9.3",
        "vitest": "^1.6.1"
    }
}
