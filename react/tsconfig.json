{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "composite": true
  },
  "exclude": [ "**/node_modules", "**/dist" ]
}
