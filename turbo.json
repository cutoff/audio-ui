{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "lint": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "test": {
            "dependsOn": ["^build"]
        },
        "typecheck": {
            "dependsOn": ["^build"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "start": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "install": {
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "format": {
            "cache": false
        }
    }
}
